{#
  Ce formulaire est utilisé pour permettre aux utilisateurs d'ajouter un commentaire à un article dans une application Symfony/React. 
  Le formulaire est généré à l'aide de la variable 'form' et est configuré pour envoyer les données en utilisant la méthode POST vers l'URL spécifiée dans 'action'. 
  Le formulaire comprend un champ de contenu de commentaire où les utilisateurs peuvent saisir leur commentaire.
#}

{{ form_start(form, {method: 'POST', action: path('comment_new', {'postSlug': post.slug})}) }}

    <fieldset>
        <legend>
            <i class="fa fa-comment" aria-hidden="true"></i> {{ 'title.add_comment'|trans }}
        </legend>

        
        {{ form_errors(form) }}

        <div class="form-group {% if not form.content.vars.valid %}has-error{% endif %}">
            {{ form_label(form.content, 'label.content', {label_attr: {class: 'sr-only'}}) }}

            
            {{ form_errors(form.content) }}

            {{ form_widget(form.content, {attr: {rows: 10}}) }}
            {{ form_help(form.content) }}
        </div>

        <div class="form-group">
            <button class="btn btn-primary pull-right" type="submit">
                <i class="fa fa-paper-plane" aria-hidden="true"></i> {{ 'action.publish_comment'|trans }}
            </button>
        </div>
    </fieldset>
{{ form_end(form) }}
